{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types",
    "isolatedModules": false,
    "jsx": "react",

    "paths": {
      "@/root/*": ["./src/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/classes/*": ["./src/classes/*"],
      "@/components/*": ["./src/components/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src", "./env.d.ts"]
}
