{
  "extends": "../../tsconfig.json",
  "compilerOptions": {

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types",

    "paths": {
      "@/types": ["./src/types.ts"],
      "@/base/*": ["./src/base/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/symbols/*": ["./src/symbols/*"],
      "@/typography/*": ["./src/typography/*"]
    },
  },
  "exclude": ["node_modules"],
  "include": ["./src", "./env.d.ts"]
}
